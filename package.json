{
  "name": "app-engenharia",
  "version": "0.3.6",
  "description": "Application for engineering calculations",
  "main": "src/electron/main.js",
  "scripts": {
    "electron": "electron src/electron/main.js",
    "backend": "nodemon src/backend/server.js",
    "frontend": "npm run dev --prefix frontend",
    "start": "concurrently \"npm run backend\" \"npm run frontend\" \"wait-on http://localhost:5173 && npm run electron\"",
    "dist": "npm run build --prefix frontend && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.engenharia.pro",
    "productName": "Engenharia Pro - Tração e Tensão",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": "portable",
      "icon": "public/icon.ico"
    },
    "files": [
      "src/**/*",
      "frontend/dist/**/*",
      "package.json"
    ]
  },
  "keywords": [],
  "author": "Engenharia Pro",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "csv-parser": "^3.2.0",
    "drizzle-orm": "^0.45.1",
    "electron": "^40.1.0",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "pdfkit": "^0.17.2",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "electron-builder": "^26.7.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "wait-on": "^9.0.3"
  }
}